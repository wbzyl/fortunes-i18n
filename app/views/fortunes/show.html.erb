<% title t ".title" %>

<article class="show">
  <div class="attribute">
    <span class="name"><%= t "simple_form.labels.fortune.quotation" %></span>
    <span class="value"><%= @fortune.quotation %></span>
  </div>
  <div class="attribute">
    <span class="name"><%= t "simple_form.labels.fortune.source" %></span>
    <span class="value"><%= @fortune.source %></span>
  </div>
<div class="form-actions">
  <%= link_to t('back'), fortunes_path, class: 'btn'%>
  <%= link_to t('edit'), edit_fortune_path(@fortune), class: 'btn' %>
  <%= link_to t('destroy'), @fortune, confirm: t('confirm'), method: :delete, class: 'btn btn-danger'%>
</div>
</article>
